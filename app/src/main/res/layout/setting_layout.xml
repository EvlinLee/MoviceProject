<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

   <RelativeLayout
       android:id="@+id/rl_info_pic"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/btn_whilte_selector"
       android:padding="@dimen/margin_middle">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:text="头像"
          android:textColor="@color/text_color_black_1" />

      <com.gxtc.commlibrary.widget.CircleImageView
          android:id="@+id/iv_info_pic"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/margin_10"
          android:layout_toLeftOf="@+id/iv_info_more1"
          android:src="@drawable/main_mine_normal" />

      <ImageView
          android:id="@+id/iv_info_more1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:src="@drawable/more" />

   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:background="@color/view" />

   <TextView
       android:id="@+id/userid"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:text="ID(158369)"
       android:padding="@dimen/margin_middle"
       android:textColor="@color/text_color_black_1" />

   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:background="@color/view" />

   <RelativeLayout
       android:id="@+id/rl_info_nickname"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/btn_whilte_selector"
       android:padding="@dimen/margin_middle">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:text="昵称"
          android:textColor="@color/text_color_black_1" />

      <TextView
          android:id="@+id/tv_info_nickname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/margin_10"
          android:layout_toLeftOf="@+id/iv_info_more2"
          android:textColor="@color/text_color_black_2"
          android:text="18888888888" />

      <ImageView
          android:id="@+id/iv_info_more2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:src="@drawable/more" />
   </RelativeLayout>

   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:background="@color/view" />


      <TextView
          android:id="@+id/wx_alername"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:text="账号微信（素素）"
          android:padding="@dimen/margin_middle"
          android:textColor="@color/text_color_black_1" />



   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:background="@color/view" />

   <TextView
       android:id="@+id/exit"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_marginTop="50dp"
       android:text="退出账号"
       android:gravity="center"
       android:padding="@dimen/margin_10"
       android:textSize="@dimen/textSize_m"
       android:layout_marginLeft="@dimen/margin_medium"
       android:layout_marginRight="@dimen/margin_medium"
       android:background="@drawable/btn_red_selector"
       android:textColor="@color/white" />


</LinearLayout>
